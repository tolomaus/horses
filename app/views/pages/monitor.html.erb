<% content_for :html_attributes do %>
  xmlns="http://www.w3.org/1999/xhtml" xmlns:fb="http://ogp.me/ns/fb#"
<% end %>
<% content_for :body_init do %>
  <%= render :partial => 'shared/fb_js_init' %>
<% end %>

<h3>HTML5</h3>
<p>Activity feed:</p>
<div class="fb-activity" data-width="300" data-height="300" data-header="true" data-recommendations="false"></div>

<p>Recommendations:</p>
<div class="fb-recommendations" data-width="300" data-height="300" data-header="true"></div>

<p>Like Box:</p>
<div class="fb-like-box" data-href="<%= root_path %>" data-width="292" data-show-faces="true" data-stream="true" data-header="false"></div>

<p>Facepile by site:</p>
<div class="fb-facepile" data-href="<%= root_path %>" data-width="200" data-max-rows="1"></div>

<p>Facepile by app id:</p>
<div class="fb-facepile" data-app_id="<%= FACEBOOK_CONFIG['app_id'] %>" data-width="200" data-max-rows="1"></div>

<p>Add to timeline (beta):</p>
<div class="fb-add-to-timeline" data-show-faces="true"></div>

<h3>XFBML</h3>
<p>Activity feed:</p>
<fb:activity width="300" height="300" header="true" recommendations="false"></fb:activity>

<p>Recommendations:</p>
<fb:recommendations width="300" height="300" header="true"></fb:recommendations>

<p>Like Box:</p>
<fb:like-box href="<%= root_path %>" width="292" show_faces="true" stream="true" header="false"></fb:like-box>

<p>Facepile by site:</p>
<fb:facepile href="<%= root_path %>" width="200" max_rows="1"></fb:facepile>

<p>Facepile by app_id:</p>
<div id="fb-root"></div><script src="http://connect.facebook.net/en_US/all.js
#appId=<%= FACEBOOK_CONFIG['app_id'] %>&amp;xfbml=1"></script><fb:facepile></fb:facepile>

<p>Add to timeline (beta):</p>
<fb:add-to-timeline show-faces="true"></fb:add-to-timeline>